<h2>Event details</h2>
<% @attendee_event ||= @event.attendee_events.build %>

<%= render @event %>


<p>List of names attending</p>
<ul>
        <% @event.attendees.each do |attendee| %>
          <li><%= attendee.name %></li>
        <% end %>
      </ul>
    <%if AttendeeEvent.exists?(attendee_id: current_user.id, event_id: @event.id)%>
      <%= button_to 'Remove attendance', event_attendee_event_path(event_id: @event.id, attendee_id: current_user.id), method: :delete %>
    <%else%>
      <%= form_with model: [@event, @attendee_event], local: true do |form| %>
      <%= form.submit "I will be there!" %>
    <%end%>
  
  <%end%>

<div>
  <%= link_to "Edit", edit_event_path(@event) %> 
  <%= button_to "Delete event", @event, method: :delete, form: { data: {confirm: 'Are you sure?' }}%>
  <%= link_to "Back", root_path %>
</div>